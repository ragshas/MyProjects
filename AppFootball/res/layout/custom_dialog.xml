<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customborder" >

    <TextView
        android:id="@+id/tvDialog1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tvLabelOffice"
        android:clickable="true"
        android:text="014494901"
        android:textColor="@color/White"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDialog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvDialog1"
        android:layout_below="@+id/tvDialog1"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:gravity="center"
        android:text="9841919789"
        android:textColor="@color/White"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDialog3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvDialog1"
        android:layout_below="@+id/tvDialog2"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:gravity="center"
        android:text="..............."
        android:textColor="@color/White"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLabelOffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDialog2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:text="Office tel:"
        android:textColor="@color/White"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLabelMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDialog3"
        android:layout_alignLeft="@+id/tvLabelOffice"
        android:text="Mobile:"
        android:textColor="@color/White"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLabelEtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvDialog3"
        android:layout_alignLeft="@+id/tvLabelMobile"
        android:text="etc:"
        android:textColor="@color/White"
        android:textSize="20sp" />

</RelativeLayout>